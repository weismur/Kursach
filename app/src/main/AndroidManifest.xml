<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.testtest">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:forceDarkAllowed="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/icon"
        android:label="Simple Reader"
        android:roundIcon="@drawable/icon_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/Theme.TestTest"
        tools:targetApi="31">
        <activity
            android:name=".SplashScreen"
            android:exported="true"
            android:label="Simple Reader">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".boockCheckItem"
            android:exported="false" />
        <activity
            android:name=".bookCheckActivity"
            android:label="Чек-лист книг"
            android:exported="false" />
        <activity
            android:name=".Random"
            android:exported="false"
            android:label="Подборка книг" />
        <activity
            android:name=".AboutProgram"
            android:exported="false"
            android:label="О программе"/>
        <activity
            android:name=".LibraryActivity"
            android:exported="true"
            android:label="Библиотека"/>
        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:label="Настройки" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="Главный экран" />
    </application>

</manifest>